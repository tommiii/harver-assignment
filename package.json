{
  "name": "harver-assignment",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace client dev\" \"yarn workspace server dev\"",
    "clean": "rm -rf node_modules && rm -rf */node_modules && rm -rf */dist",
    "start": "yarn workspaces run dev",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint --fix",
    "validate": "yarn lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
